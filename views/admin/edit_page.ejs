<%- include ("../_layouts/adminheader") %>

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Update page
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        <form action="/admin/pages/edit-page/<%= id %>" method="POST">
                            <div class="form-group">
                                <label>Title</label>
                                <input type="text" name="title" value="<%= title %>"
                                    class="form-control" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label>Slug</label>
                                <input type="text" name="slug" value="<%= slug %>" class="form-control" placeholder="Slug">
                            </div>
                            <div class="form-group">
                                <label>Content</label>
                                <!-- <textarea id="ta" style="resize: none" rows="5" class="form-control" name="content" placeholder="Mô tả"><%= content %></textarea> -->
                                <textarea id="ta" style="resize: none" rows="5" class="form-control" name="content" placeholder="Mô tả"><%= content %></textarea>
                            </div>
                            <button name="" class="btn btn-info">Update</button>
                        </form>
                    </div>
                </div>
            </section>
        </div>

    <%- include ("../_layouts/adminfooter") %>