<%- include ("../_layouts/adminheader") %>

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Cập nhật sản phẩm
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        <form action="/admin/products/edit-product/<%= id %>" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Tên sản phẩm</label>
                                <!-- title được gửi qua bên route /add-product -->
                                <input type="text" name="title" value="<%= title %>"
                                    class="form-control" placeholder="Tên sản phẩm">
                            </div>
                            <div class="form-group">
                                <label>Mô tả sản phẩm</label>
                                <!-- desc property -->
                                <textarea name="desc" class="form-control" cols="30" rows="10" placeholder="Mô tả sản phẩm"><%= desc %></textarea>
                            </div>
                            <div class="form-group">
                                <label>Danh mục sản phẩm</label>
                                <!-- category bên admin_product gửi qua, category property -->
                                <select name="category" class="form-control">
                                    <% categories.forEach(function(cat){ %>
                                        <option value="<%= cat.slug %>" 
                                            <% if (cat.slug == category) { %> selected 
                                            <% } %>><%= cat.title %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Giá sản phẩm</label>
                                <input type="text" name="price" value="<%= price %>"
                                    class="form-control" placeholder="Giá sản phẩm">
                            </div>
                            <div class="form-group">
                                <label>Hình ảnh hiện tại</label>
                                <p>
                                    <% if (image == "") { %>
                                        <img id="noimage" src="../../../backend/images/images/noimage.jpg">
                                    <% } else { %>
                                        <img id="noimage" src="../../../backend/product_images/<%= id %>/<%= image %>">
                                    <% } %> 
                                </p>
                            </div>
                            <div class="form-group">
                                <label>Hình ảnh mới</label>
                                <input type="file" class="form-control" name="image" id="img">
                                <img src="#" id="imgPreview" alt="">
                            </div>
                            <input type="hidden" name="pimage" value="<%= image %> ">
                            <button class="btn btn-info">Cập nhật sản phẩm</button>
                        </form>

                        <hr>

                        <h3 class="page-header">Thư viện ảnh</h3>
                        <ul class="gallery">
                            <% galleryImages.forEach(function (image) { %>
                                <% if (image != "thumbs") { %>
                                 
                                <li>
                                    <img src="../../../backend/product_images/<%= id %>/gallery/thumbs/<%= image %>">&nbsp;
                                    <a onclick="return confirm('Bạn có chắc muốn xóa hình trong thư viện ảnh này không?')" href="/admin/products/delete-image/<%= image %>?id=<%= id %>">Xóa ảnh</a>
                                </li>
                                <% } %> 
                            <% }); %>
                        </ul>

                        <br><br>
                        <form action="/admin/products/product-gallery/<%= id %>" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm">
                            <div class="fallback">
                                <input type="file" name="file" multiple>
                                <input type="submit" value="Upload">
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/basic.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.js"></script>
    <script>

        // Preview image
        function readURL(input){
            if(input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    $("#imgPreview").attr('src',e.target.result).width(100).height(100);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#img").change(function(){
            readURL(this);
        });

        // Dropzone
        Dropzone.options.dropzoneForm = {
            acceptedFiles: "image/*",
            init: function() {
                this.on("queuecomplete", function(file){
                    setTimeout(function(){
                        location.reload()
                    }, 1000);
                });
            }
        }
    </script>
    
    <%- include ("../_layouts/adminfooter") %>