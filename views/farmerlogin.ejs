<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link rel="stylesheet" type="text/css" href="../../../frontend/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <%- messages('messages', locals) %>
    <% if (errors) {%>
        <div style="display: flex;background: skyblue;padding: 10px;">
            <% errors.forEach(function(error){ %>
                <div style="color: red;">
                  <%= error.msg %>
                </div>,
            <% }); %>
        </div>
    <% }%>
    <div class="container" id="container">
        <div id="sign-up" class="form-container sign-up-container">
            <form id="sign-up-form" action="/users/farmer/register" method="post">
                <h1>Create a farmer account</h1>
                <!-- <div class="social-container">
                    <a href="#" class="social"><i class="fa fa-facebook"></i></a>
                    <a href="#" class="social"><i class="fa fa-google"></i></a>
                    <a href="#" class="social"><i class="fa fa-phone"></i></a>
                </div> -->
                <input type="text" name="name" placeholder="Name">
                <input type="email" name="email" placeholder="Email">
                <input type="text" name="username" placeholder="Username">
                <input type="password" name="password" placeholder="Password">
                <input type="password" name="password2" placeholder="Confirm Password">
                <button type="submit">Register</button>
            </form>
        </div>
        <div id="sign-in" class="form-container sign-in-container">
            <form id="signin-form" action="/users/farmer/login" method="POST">
                <h1>Farmer login</h1>
                <!-- <div class="social-container">
                    <a href="#" class="social"><i class="fa fa-facebook"></i></a>
                    <a href="#" class="social"><i class="fa fa-google"></i></a>
                    <a href="#" class="social"><i class="fa fa-phone"></i></a>
                </div> -->
                <span>or use your account</span>
                <input type="text" name="username" placeholder="Username">
                <input type="password" name="password" placeholder="Password">
                <a href="#">Forgot password</a>

                <button type="submit">Login</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome back!</h1>
                    <p>To stay connected with us, please log in with your personal information</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello users</h1>
                    <p>Enter your details</p>
                    <button class="ghost" id="signUp">Registration</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        const signUpButton = document.getElementById('signUp');
        const signInButton = document.getElementById('signIn');
        const container = document.getElementById('container');

        signUpButton.addEventListener('click', () => {
            container.classList.add("right-panel-active");
        });
        signInButton.addEventListener('click', () => {
            container.classList.remove("right-panel-active");
        });
    </script>

    <!-- <script src="js/supplierAuth.js"></script> -->

</body>

</html>