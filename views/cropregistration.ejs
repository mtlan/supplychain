<%- include ("_layouts/header") %>

    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-7 ftco-animate">
                        <h3 class="billing-heading">Crop Registration</h3>
                        <h5>Address Wallet : <span class="white"><span id="SenderBalance"></span></h5>
                        <div class="row align-items-end">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="firstname">Farmer Id</label>
                                    <input type="text" class="form-control" placeholder="" id="farmerid">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="lastname">Farmer Name</label>
                                    <input type="text" class="form-control" placeholder="" id="farmername">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="country">Planting Address</label>
                                    <input type="text" class="form-control" placeholder="" id="farmeraddress">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="streetaddress">Crop name</label>
                                    <input type="text" class="form-control" placeholder="" id="cropname">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="streetaddress">Phone</label>
                                    <input type="text" class="form-control" placeholder="" id="farmerphone">
                                </div>
                            </div>
                            <div class="w-100"></div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="towncity">Quantity</label>
                                    <input type="text" class="form-control" placeholder="" id="quantity">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="postcodezip">Expected Price</label>
                                    <input type="text" class="form-control" placeholder="" id="price">
                                </div>
                            </div>
                            <p><button class="btn btn-primary py-3 px-4 mr-5" id="addvalue">Submit</button></p>
                            <p><button class="btn btn-danger py-3 px-4" id="connectMM">Connect Metamark</button></p>
                        </div>
                </div>
                <div class="col-xl-5">
                    <div class="row mt-5 pt-3">
                        <div class="col-md-12 d-flex mb-5">
                            <div class="cart-detail cart-total p-3 p-md-4">
                                <img src="https://baokinhte.net/wp-content/uploads/2021/01/gia-nong-san.jpg" class="img-fluid"
                                alt="Responsive image">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="cart-detail cart-total p-3 p-md-4">
                                <img src="https://www.ifm.org/wp-content/uploads/Farmer_with_vegetables-scaled.jpg" class="img-fluid"
                                alt="Responsive image">
                            </div>
                        </div>
                    </div>
                </div> <!-- .col-md-8 -->
            </div>
        </div>
    </section> <!-- .section -->

    <%- include ("_layouts/footer") %>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="../../process.js"></script>
    <!-- nhúng thư viện web3 -->
    <script src="../../scripts/web3.js"></script>